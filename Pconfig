mainmenu "winfade configuration"

# build config
choice
	prompt "Build type"

	config BUILD_RELEASE
		bool "release"

	config BUILD_DEBUG
		bool "debug"
endchoice

menu "Hidden"
	visible if 0

	config BUILD_TYPE
		string "Build type"
		default "debug" if BUILD_DEBUG
		default "release" if BUILD_RELEASE
endmenu
